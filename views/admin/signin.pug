extends _layouts/layout

block var
	- bodyClass = "authenticate authenticate-signin"

block main
	.auth-wrapper
		.auth-content
			.card
				.row.align-items-center
					.col-md-12
						form.card-body.js-form(action="/auth/signin" method="POST")
							.form-group.text-center.mb-4
								img.img-fluid(src='/public/images/logo-dark.svg' alt='')
							.form-group.text-center.mb-3
								h4.f-w-400= page_title
							.form-group.mb-3
								.input-group
									.input-group-prepend
										.input-group-text
											span.fal.fa-envelope
									input.form-control(type='email' placeholder='Email address' name="email" error-label="#email-error" required regex="^([a-zA-Z0-9_.-]+)@([a-zA-Z0-9_.-]+)\\.([a-zA-Z]{2,5})" check="/auth/field-check" autocomplete="false")
							.form-group.mb-4
								.input-group
									.input-group-prepend
										.input-group-text
											span.fal.fa-lock
									input.form-control(type='password' placeholder='Password' name="password")
							.form-group.text-left.mt-2
								.custom-control.custom-checkbox
									input#customCheckdefh2.custom-control-input.input-primary(type='checkbox')
									label.custom-control-label(for='customCheckdefh2') Save credentials
							button.js-form-submit.btn.btn-block.btn-primary.mb-4 Signin
							p.mb-0.text-muted
								| Donâ€™t have an account? 
								a.f-w-400(href='/auth/signup') Signup
