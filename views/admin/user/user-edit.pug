extends ../_layouts/layout

block var
	- bodyClass = "user user-create"
	- fakeOptions = [{value: '1',title: 'Admin'},{value: '2',title: 'Moderator'},{value: '3',title: 'Writer'},{value: '4',title: 'Editor'},{value: '5',title: 'Checker'}]

block main
	.row
		.col-auto
			.card(style="width: 550px; max-width: 100%")
				.card-header
					h5 Create new account
				.card-body
					form.form-v1(action="/admin/user/edit/"+data.id method="post" autocomplete="off")
						.form-group.mb-4
							label(for='username') Username
							input#username.form-control(type='text' aria-describedby='username-help' name="username" autocomplete="off" value=data.username disabled)
							-if(message)
								span#password-help.form-text.text-danger= message.user_usernameError
						.form-group.mb-4
							label(for='email') Email address
							input#email.form-control.shadow-sm(type='email' aria-describedby='email-help' placeholder='Enter email' name="email" autocomplete="off" value=data.email disabled)
							-if(message)
								span#password-help.form-text.text-danger= message.user_emailError
						.form-group.mb-4
							label(for='role') Email address
							select#role.form-control.shadow-sm(aria-describedby='role-help' name="role")
								option(selected value="default" disabled) Choose a role for account
								each option in fakeOptions
									- if(data.role == option.value)
										option(value=option.value selected='selected')= option.title
									- else
										option(value=option.value)= option.title
							-if(message)
								span#password-help.form-text.text-danger= message.user_roleError
						.form-group.text-right
							button.btn.btn-shadow.btn-light(type="reset") Reset
							button.btn.btn-shadow.btn-success.ml-3(type="submit") Update